rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Public read access for books (PDFs)
    match /books/{bookFile} {
      allow read: if true; // Anyone can read
      allow write: if request.auth != null && request.auth.token.admin == true; // Only admins can write
    }
    
    // Public read access for images
    match /images/{imageFile} {
      allow read: if true; // Anyone can read
      allow write: if request.auth != null && request.auth.token.admin == true; // Only admins can write
    }
    
    // Public read access for videos
    match /videos/{videoFile} {
      allow read: if true; // Anyone can read
      allow write: if request.auth != null && request.auth.token.admin == true; // Only admins can write
    }
    
    // User profile pictures
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
